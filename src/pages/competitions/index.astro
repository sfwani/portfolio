---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Footer from '../../components/Footer.astro';
---

<BaseLayout title="./competitions | Cybersecurity Portfolio">
  <div class="content-container">
    <section class="page-header">
      <h1 class="page-title">./competitions</h1>
      <p class="page-description">A record of my participation in Capture The Flag (CTF) competitions, including team results, achievements, and learning experiences.</p>
    </section>

    <section class="timeline-container">
      <div class="timeline-line"></div>
      
      <div class="timeline-section future">
        <h2 class="section-title">upcoming</h2>
        
        <div class="timeline-item" data-year="2023">
          <div class="timeline-marker"></div>
          <div class="competition-item">
            <div class="competition-header">
              <h3>DEF CON CTF Qualifier 2023</h3>
              <span class="competition-date">May 2023</span>
            </div>
            <p class="competition-desc">
              Preparing to compete in one of the most prestigious CTF events.
            </p>
          </div>
        </div>
      </div>
      
      <div class="timeline-section past">
        <h2 class="section-title">past</h2>
        
        <div class="timeline-item" data-year="2022">
          <div class="timeline-marker"></div>
          <div class="competition-item">
            <div class="competition-header">
              <h3>HackTheBox University CTF 2022</h3>
              <span class="competition-date">November 2022</span>
            </div>
            <p class="competition-desc">
              Placed in the top 15% of teams competing globally. Focused on web exploitation and reverse engineering challenges.
            </p>
            <div class="competition-tags">
              <span class="competition-tag">web</span>
              <span class="competition-tag">rev</span>
              <span class="competition-tag">crypto</span>
            </div>
          </div>
        </div>
        
        <div class="timeline-item" data-year="2022">
          <div class="timeline-marker"></div>
          <div class="competition-item">
            <div class="competition-header">
              <h3>picoCTF 2022</h3>
              <span class="competition-date">March 2022</span>
            </div>
            <p class="competition-desc">
              Solved 32 challenges across multiple categories, focusing primarily on binary exploitation and cryptography.
            </p>
            <div class="competition-tags">
              <span class="competition-tag">pwn</span>
              <span class="competition-tag">crypto</span>
              <span class="competition-tag">forensics</span>
            </div>
          </div>
        </div>
        
        <div class="timeline-item" data-year="2021">
          <div class="timeline-marker"></div>
          <div class="year-label">2021</div>
          <div class="competition-item">
            <div class="competition-header">
              <h3>CSAW CTF Qualification Round</h3>
              <span class="competition-date">September 2021</span>
            </div>
            <p class="competition-desc">
              Participated with a team of four security enthusiasts, focusing on reverse engineering and cryptography challenges.
            </p>
            <div class="competition-tags">
              <span class="competition-tag">rev</span>
              <span class="competition-tag">crypto</span>
              <span class="competition-tag">misc</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  
  <Footer slot="footer" />
</BaseLayout>

<script>
  // Add animation to timeline items on scroll
  document.addEventListener('DOMContentLoaded', () => {
    const timelineItems = document.querySelectorAll('.timeline-item');
    const timeline = document.querySelector('.timeline-line');
    const page = document.querySelector('.content-container');
    
    // Add dark mode class for enhanced effects
    page.classList.add('enhanced-visuals');
    
    // Animate timeline line first
    timeline.style.animation = 'grow 1s ease-out forwards';
    
    // Animate timeline items with staggered delay
    timelineItems.forEach((item, index) => {
      setTimeout(() => {
        item.classList.add('animate-in');
      }, 800 + (300 * index));
    });
    
    // Add intersection observer for enhanced scrolling experience
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.5 });
    
    timelineItems.forEach(item => {
      observer.observe(item);
    });
  });
</script>

<style>
  .content-container {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding-top: 5rem;
  }
  
  .page-header {
    margin: 3rem 0 4rem;
    text-align: center;
  }
  
  .page-title {
    font-size: 2rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    animation: fadeDown 0.8s ease-out forwards;
    font-family: monospace;
    font-weight: 500;
    color: var(--text-main);
  }
  
  .page-title::before {
    content: "$";
    color: var(--text-secondary);
    margin-right: 0.5rem;
    opacity: 0.7;
  }
  
  .page-description {
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
    animation: fadeUp 0.8s ease-out forwards;
    animation-delay: 0.2s;
    opacity: 0;
    animation-fill-mode: forwards;
  }
  
  .section-title {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    position: relative;
    padding-left: 30px;
    padding-top: 10px;
    animation: fadeIn 0.5s ease-out forwards;
    font-weight: 500;
    color: var(--text-main);
    display: inline-block;
    border-bottom: none;
    font-family: monospace;
    letter-spacing: 0.05em;
    opacity: 0.9;
    text-transform: lowercase;
  }
  
  .section-title::before {
    content: '';
    position: absolute;
    left: 20px;
    top: 50%;
    width: 0;
    height: 0;
    background-color: transparent;
  }
  
  .section-title::after {
    content: '';
    position: absolute;
    left: 0;
    right: -40px;
    bottom: -8px;
    height: 1px;
    background: linear-gradient(to right, var(--text-main) 10%, transparent);
    opacity: 0.2;
  }
  
  .timeline-container {
    position: relative;
    padding: 2rem 0;
  }
  
  .timeline-line {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 30px;
    width: 2px;
    background: linear-gradient(to bottom, 
      transparent, 
      var(--border) 10%, 
      var(--border) 90%, 
      transparent);
    animation: grow 1.5s ease-out forwards;
    transform-origin: top center;
    z-index: 1;
  }
  
  .timeline-section {
    position: relative;
    margin-bottom: 3rem;
    z-index: 2;
  }
  
  .year-indicator {
    display: none; /* Remove the old year indicators */
  }
  
  .year-label {
    display: none; /* Hide the separate year labels in favor of the ::before pseudo-element */
  }
  
  .future .timeline-item {
    border-left: 2px dashed var(--border);
  }
  
  .timeline-item {
    position: relative;
    padding-left: 60px;
    margin-bottom: 3rem;
    opacity: 0;
    transform: translateX(-20px);
    transition: all 0.5s ease;
  }
  
  .timeline-item:not(:first-child) {
    margin-top: -1rem;
  }
  
  .timeline-item[data-year]:not(:first-child) {
    margin-top: 1rem;
  }
  
  .timeline-item.animate-in {
    opacity: 1;
    transform: translateX(0);
  }
  
  .timeline-item.in-view .timeline-marker {
    transform: scale(1.2);
  }
  
  .timeline-marker {
    position: absolute;
    left: 23px;
    top: 20px;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background-color: var(--text-main);
    border: 2px solid var(--background);
    transition: transform 0.3s ease;
    box-shadow: 0 0 0 rgba(var(--text-main-rgb, 220, 220, 220), 0.4), 0 0 8px rgba(255, 255, 255, 0.2);
    animation: pulse 2s infinite;
    z-index: 4;
  }
  
  .enhanced-visuals .timeline-marker::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 6px;
    height: 6px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    filter: blur(1px);
  }
  
  .enhanced-visuals .timeline-line {
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.1);
  }
  
  .timeline-item:hover .timeline-marker {
    animation: pulse 1s infinite;
  }
  
  .timeline-item::before {
    content: attr(data-year);
    position: absolute;
    left: 0;
    top: 20px;
    font-size: 0.9rem;
    font-weight: bold;
    color: rgba(255, 255, 255, 0.7);
    text-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
    transform: translateX(-150%);
    z-index: 5;
    text-align: right;
    min-width: 40px;
  }
  
  .timeline-item:hover::before {
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
  }
  
  .competition-item {
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    background-color: var(--background);
    background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.03), rgba(0, 0, 0, 0.05));
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    position: relative;
    overflow: hidden;
  }
  
  .competition-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 0;
    background: linear-gradient(to bottom, var(--text-main), transparent);
    transition: height 0.3s ease;
  }
  
  .competition-item:hover {
    border-color: var(--text-secondary);
    transform: translateY(-4px) scale(1.01);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
  }
  
  .competition-item:hover::before {
    height: 100%;
  }
  
  .competition-item::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 8px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0) 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  .competition-item:hover::after {
    opacity: 1;
  }
  
  .competition-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }
  
  .competition-date {
    color: var(--text-secondary);
    font-size: var(--font-size-small);
    white-space: nowrap;
    margin-left: auto;
    background-color: rgba(0, 0, 0, 0.2);
    padding: 2px 8px;
    border-radius: 4px;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .competition-item h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--text-main);
    font-weight: 500;
    margin-right: 1rem;
    letter-spacing: 0.01em;
    transition: text-shadow 0.3s ease;
  }
  
  .competition-item:hover h3 {
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.2);
  }
  
  .competition-desc {
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }
  
  .competition-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .competition-tag {
    font-size: 0.7rem;
    color: var(--text-secondary);
    border: 1px solid var(--border);
    padding: 0.2rem 0.5rem;
    border-radius: 20px;
    transition: all 0.15s ease;
  }
  
  .competition-tag[class*="web"] {
    border-color: rgba(64, 196, 255, 0.4);
    color: rgba(64, 196, 255, 0.8);
    background-color: rgba(64, 196, 255, 0.05);
  }
  
  .competition-tag[class*="rev"] {
    border-color: rgba(255, 64, 129, 0.4);
    color: rgba(255, 64, 129, 0.8);
    background-color: rgba(255, 64, 129, 0.05);
  }
  
  .competition-tag[class*="crypto"] {
    border-color: rgba(102, 187, 106, 0.4);
    color: rgba(102, 187, 106, 0.8);
    background-color: rgba(102, 187, 106, 0.05);
  }
  
  .competition-tag[class*="pwn"] {
    border-color: rgba(255, 171, 64, 0.4);
    color: rgba(255, 171, 64, 0.8);
    background-color: rgba(255, 171, 64, 0.05);
  }
  
  .competition-tag[class*="forensics"] {
    border-color: rgba(156, 39, 176, 0.4);
    color: rgba(156, 39, 176, 0.8);
    background-color: rgba(156, 39, 176, 0.05);
  }
  
  .competition-tag[class*="misc"] {
    border-color: rgba(239, 83, 80, 0.4);
    color: rgba(239, 83, 80, 0.8);
    background-color: rgba(239, 83, 80, 0.05);
  }
  
  .competition-item:hover .competition-tag {
    border-color: var(--border-hover);
    transform: scale(1.05);
  }
  
  /* Animations */
  @keyframes fadeDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes grow {
    from { transform: scaleY(0); }
    to { transform: scaleY(1); }
  }
  
  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(var(--text-main-rgb, 220, 220, 220), 0.4), 0 0 8px rgba(255, 255, 255, 0.1);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(var(--text-main-rgb, 220, 220, 220), 0), 0 0 12px rgba(255, 255, 255, 0.2);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(var(--text-main-rgb, 220, 220, 220), 0), 0 0 8px rgba(255, 255, 255, 0.1);
    }
  }
  
  @media (max-width: 768px) {
    .timeline-line {
      left: 20px;
    }
    
    .section-title {
      padding-left: 20px;
    }
    
    .section-title::after {
      right: -20px;
    }
    
    .timeline-marker {
      left: 13px;
    }
    
    .timeline-item {
      padding-left: 45px;
    }
    
    .timeline-item::before {
      left: 13px;
      top: -15px;
      transform: none;
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.8rem;
    }
    
    .year-label {
      display: none;
    }
    
    .competition-header {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .competition-date {
      margin-left: 0;
      margin-top: 0.5rem;
    }
  }
</style> 