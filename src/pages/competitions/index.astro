  <Footer slot="footer" />
</BaseLayout>

<script>
  // Add animation to timeline items on scroll
  document.addEventListener('DOMContentLoaded', () => {
    const timelineItems = document.querySelectorAll('.timeline-item');
    const timeline = document.querySelector('.timeline-line');
    const page = document.querySelector('.content-container');
    
    // Add dark mode class for enhanced effects
    page.classList.add('enhanced-visuals');
    
    // Animate timeline line first
    timeline.style.animation = 'grow 1s ease-out forwards';
    
    // Animate timeline items with staggered delay
    timelineItems.forEach((item, index) => {
      setTimeout(() => {
        item.classList.add('animate-in');
      }, 800 + (300 * index));
    });
    
    // Add intersection observer for enhanced scrolling experience
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.5 });
    
    timelineItems.forEach(item => {
      observer.observe(item);
    });
  });
</script>

<style>
  .content-container {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding-top: 5rem;
  }
  
  .page-header {
    margin: 3rem 0 4rem;
    text-align: center;
  }
  
  .page-title {
    font-size: 2rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    animation: fadeDown 0.8s ease-out forwards;
    font-family: monospace;
    font-weight: 500;
    color: var(--text-main);
  }
  
  .page-title::before {
    content: "$";
    color: var(--text-secondary);
    margin-right: 0.5rem;
    opacity: 0.7;
  }
  
  .page-description {
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
    animation: fadeUp 0.8s ease-out forwards;
    animation-delay: 0.2s;
    opacity: 0;
    animation-fill-mode: forwards;
  }
  
  .section-title {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    position: relative;
    padding-left: 30px;
    padding-top: 10px;
    animation: fadeIn 0.5s ease-out forwards;
    font-weight: 500;
    color: var(--text-main);
    display: inline-block;
    border-bottom: none;
    font-family: monospace;
    letter-spacing: 0.05em;
    opacity: 0.9;
    text-transform: lowercase;
  }
  
  .section-title::before {
    content: '';
    position: absolute;
    left: 20px;
    top: 50%;
    width: 0;
    height: 0;
    background-color: transparent;
  }
  
  .section-title::after {
    content: '';
    position: absolute;
    left: 0;
    right: -40px;
    bottom: -8px;
    height: 1px;
    background: linear-gradient(to right, var(--text-main) 10%, transparent);
    opacity: 0.2;
  }
  
  .timeline-container {
    position: relative;
    padding: 2rem 0;
  }
  
  .timeline-line {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 30px;
    width: 2px;
    background: linear-gradient(to bottom, 
      transparent, 
      var(--border) 10%, 
      var(--border) 90%, 
      transparent);
    animation: grow 1.5s ease-out forwards, timeline-glow 4s ease-in-out infinite alternate;
    transform-origin: top center;
    z-index: 1;
  }
  
  .timeline-section {
    position: relative;
    margin-bottom: 3rem;
    z-index: 2;
  }
  
  .year-indicator {
    display: none; /* Remove the old year indicators */
  }
  
  .year-label {
    display: none; /* Hide the separate year labels in favor of the ::before pseudo-element */
  }
  
  .future .timeline-item {
    border-left: 2px dashed var(--border);
  }
  
  .timeline-item {
    position: relative;
    padding-left: 60px;
    margin-bottom: 3rem;
    opacity: 0;
    transform: translateX(-20px);
    transition: all 0.5s ease;
  }
  
  .timeline-item:not(:first-child) {
    margin-top: -1rem;
  }
  
  .timeline-item[data-year]:not(:first-child) {
    margin-top: 1rem;
  }
  
  .timeline-item.animate-in {
    opacity: 1;
    transform: translateX(0);
  }
  
  .timeline-item.in-view .timeline-marker {
    transform: scale(1.2);
  }
  
  .timeline-marker {
    position: absolute;
    left: 23px;
    top: 20px;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background-color: rgba(220, 220, 220, 0.8);
    border: 2px solid var(--background);
    transition: transform 0.3s ease, background-color 0.3s ease;
    box-shadow: 0 0 0 rgba(220, 220, 220, 0.4), 0 0 8px rgba(255, 255, 255, 0.2);
    animation: pulse 2s infinite, subtle-pulse 4s ease-in-out infinite alternate;
    z-index: 4;
  }
  
  .enhanced-visuals .timeline-marker::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 6px;
    height: 6px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    filter: blur(1px);
  }
  
  .enhanced-visuals .timeline-line {
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.1);
  }
  
  .timeline-item:hover .timeline-marker {
    animation: pulse 1s infinite;
    background-color: #ffffff;
  }
  
  .timeline-item::before {
    content: attr(data-year);
    position: absolute;
    left: 0;
    top: 20px;
    font-size: 0.9rem;
    font-weight: bold;
    color: rgba(255, 255, 255, 0.7);
    opacity: 0.9;
    transform: translateX(-150%);
    z-index: 5;
    text-align: right;
    min-width: 40px;
  }
  
  .timeline-item::after {
    content: attr(data-month);
    position: absolute;
    left: 0;
    top: 40px;
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.5);
    opacity: 0.9;
    transform: translateX(-150%);
    z-index: 5;
    text-align: right;
    min-width: 40px;
    font-family: monospace;
  }
  
  .timeline-item:hover::before {
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
  }
  
  .timeline-item:hover::after {
    color: rgba(255, 255, 255, 0.7);
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.2);
  }
  
  .competition-item {
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.8rem;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    background-color: var(--background);
    background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.03), rgba(0, 0, 0, 0.05));
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    position: relative;
    overflow: visible;
    animation: subtle-float 6s ease-in-out infinite alternate;
  }
  
  @keyframes subtle-float {
    0% {
      transform: translateY(0px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }
    100% {
      transform: translateY(-3px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
  }
  
  .competition-item:nth-child(odd) {
    animation-delay: 2s;
  }
  
  .competition-item:nth-child(3n) {
    animation-delay: 4s;
  }
  
  .competition-item:hover {
    border-color: var(--text-secondary);
    transform: translateY(-4px) scale(1.01);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
  }
  
  .competition-item::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 8px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0) 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  .competition-item:hover::after {
    opacity: 1;
  }
  
  .competition-header {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 1.2rem;
    flex-wrap: wrap;
    gap: 0.8rem;
    width: 100%;
  }
  
  .competition-item h3 {
    font-size: 1.3rem;
    margin-bottom: 0;
    color: var(--text-main);
    font-weight: 500;
    letter-spacing: 0.01em;
    transition: text-shadow 0.3s ease, color 0.3s ease;
    text-align: center;
  }
  
  .competition-item:hover h3 {
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.2);
    color: #ffffff;
  }
  
  .achievement-badge {
    display: none; /* Hide the original badges */
  }
  
  .achievement-badge.gold,
  .achievement-badge.silver,
  .achievement-badge.bronze,
  .achievement-badge.upcoming {
    display: none; /* Hide all variations */
  }
  
  .competition-item:hover .achievement-badge {
    transform: translateY(-2px);
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
  }
  
  .competition-item:hover .achievement-badge span {
    transform: none;
  }
  
  .competition-item:hover .achievement-badge {
    border-color: var(--border-hover);
    transform: scale(1.05);
  }
  
  .competition-desc {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    min-height: 3.2rem;
  }
  
  .achievement {
    display: none;
  }
  
  .competition-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    justify-content: center;
  }
  
  .competition-tag {
    font-size: 0.7rem;
    color: var(--text-secondary);
    border: 1px solid var(--border);
    padding: 0.25rem 0.6rem;
    border-radius: 20px;
    transition: all 0.15s ease;
  }
  
  .competition-tag[class*="web"],
  .competition-tag[class*="rev"],
  .competition-tag[class*="crypto"],
  .competition-tag[class*="pwn"],
  .competition-tag[class*="forensics"],
  .competition-tag[class*="misc"],
  .competition-tag[class*="defense"],
  .competition-tag[class*="blue-team"],
  .competition-tag[class*="incident-response"],
  .competition-tag[class*="network"] {
    border-color: rgba(180, 180, 180, 0.4);
    color: rgba(220, 220, 220, 0.9);
    background-color: rgba(180, 180, 180, 0.05);
  }
  
  .competition-item:hover .competition-tag {
    border-color: var(--border-hover);
    transform: scale(1.05);
  }
  
  .achievement-badge.gold {
    background: linear-gradient(135deg, rgba(240, 240, 240, 0.25), rgba(240, 240, 240, 0.1));
    border-color: rgba(240, 240, 240, 0.4);
  }
  
  .achievement-badge.gold span {
    color: rgba(240, 240, 240, 1);
  }
  
  .achievement-badge.silver {
    background: linear-gradient(135deg, rgba(180, 180, 180, 0.25), rgba(180, 180, 180, 0.1));
    border-color: rgba(180, 180, 180, 0.4);
  }
  
  .achievement-badge.silver span {
    color: rgba(220, 220, 220, 1);
  }
  
  .achievement-badge.bronze {
    background: linear-gradient(135deg, rgba(180, 180, 180, 0.25), rgba(180, 180, 180, 0.1));
    border-color: rgba(180, 180, 180, 0.4);
  }
  
  .achievement-badge.bronze span {
    color: rgba(220, 220, 220, 1);
  }
  
  .achievement-badge.upcoming {
    background: linear-gradient(135deg, rgba(150, 150, 150, 0.25), rgba(150, 150, 150, 0.1));
    border-color: rgba(150, 150, 150, 0.4);
  }
  
  .achievement-badge.upcoming span {
    color: rgba(200, 200, 200, 1);
  }
  
  /* Animations */
  @keyframes fadeDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes grow {
    from { transform: scaleY(0); }
    to { transform: scaleY(1); }
  }
  
  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(220, 220, 220, 0.4), 0 0 8px rgba(255, 255, 255, 0.1);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(220, 220, 220, 0), 0 0 12px rgba(255, 255, 255, 0.2);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(220, 220, 220, 0), 0 0 8px rgba(255, 255, 255, 0.1);
    }
  }
  
  @keyframes subtle-pulse {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.15);
    }
  }
  
  .timeline-item:nth-child(odd) .timeline-marker {
    animation-delay: 0s, 1s;
  }
  
  .timeline-item:nth-child(even) .timeline-marker {
    animation-delay: 0.5s, 2s;
  }
  
  .timeline-item:nth-child(3n) .timeline-marker {
    animation-delay: 1s, 3s;
  }
  
  /* Responsive adjustments - combine all mobile styles */
  @media (max-width: 768px) {
    .timeline-line {
      left: 20px;
    }
    
    .section-title {
      padding-left: 20px;
    }
    
    .section-title::after {
      right: -20px;
    }
    
    .timeline-marker {
      left: 13px;
    }
    
    .timeline-item {
      padding-left: 45px;
    }
    
    .timeline-item::before {
      transform: none;
      left: 13px;
      top: -18px;
      font-size: 0.8rem;
      opacity: 0.7;
    }
    
    .timeline-item::after {
      transform: none;
      left: 13px;
      top: -5px;
      font-size: 0.7rem;
      opacity: 0.7;
    }
    
    .year-label {
